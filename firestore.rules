rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAdmin() {
      return request.auth != null && 
             request.auth.token.email == 'admin@gmail.com';
    }
    
    function isJudge() {
      return request.auth != null && 
             exists(/databases/$(database)/documents/judges/$(request.auth.uid));
    }
    
    function isJudgeAssignedToEvent(eventId) {
      return isJudge() && 
             exists(/databases/$(database)/documents/judges/$(request.auth.uid)) &&
             eventId in get(/databases/$(database)/documents/judges/$(request.auth.uid)).data.assignedEvents;
    }

    // Events collection
    match /events/{eventId} {
      allow read: if isAdmin() || isJudge();
      allow write: if isAdmin();
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Judges collection
    match /judges/{judgeId} {
      allow read: if isAdmin() || (request.auth != null && request.auth.uid == judgeId);
      allow write: if isAdmin();
      allow create: if isAdmin();
      allow update: if isAdmin() || (request.auth != null && request.auth.uid == judgeId);
      allow delete: if isAdmin();
    }

    // Contestants collection
    match /contestants/{contestantId} {
      allow read: if isAdmin() || isJudge();
      allow write: if isAdmin();
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Scores collection - Individual judge scores
    match /scores/{scoreId} {
      // Extract judgeId from the document ID format: judgeId_contestantId_timestamp
      function getJudgeIdFromScoreId() {
        return scoreId.split('_')[0];
      }
      
      // Judges can only read/write their own scores
      allow read: if isAdmin() || (isJudge() && request.auth.uid == getJudgeIdFromScoreId());
      allow write: if isAdmin() || (isJudge() && request.auth.uid == getJudgeIdFromScoreId());
      allow create: if isAdmin() || (isJudge() && request.auth.uid == getJudgeIdFromScoreId());
      allow update: if isAdmin() || (isJudge() && request.auth.uid == getJudgeIdFromScoreId());
      allow delete: if isAdmin() || (isJudge() && request.auth.uid == getJudgeIdFromScoreId());
    }

    // Password resets collection
    match /passwordResets/{resetId} {
      allow read: if isAdmin();
      allow write: if isAdmin();
      allow create: if true; // Allow anyone to request password reset
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
